{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["node"],
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}